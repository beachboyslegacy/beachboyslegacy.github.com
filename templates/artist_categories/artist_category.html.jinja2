<!doctype html>
<html lang="en">
    <head>
        <title>{{artist_name}}: {{category_name}} - Beach Boys Legacy</title>
        <meta name="description" content="Explore {{category_name}} {{artist_name}} on Beach Boys Legacy.">

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta http-equiv="cleartype" content="on">

        <link rel="shortcut icon" href="{{base_url}}/favicon.ico" />
        <link rel="apple-touch-icon" href="{{base_url}}/icon.png"/>
        <link rel="icon" href="{{base_url}}/icon.png"/>

        <link rel="stylesheet" type="text/css" href="{{base_url}}/css/styles.css" />

        <!-- For Facebook -->
        <meta property="og:title" content="{{artist_name}}: {{category_name}} - Beach Boys Legacy"/>
        <meta property="og:description" content="Explore {{category_name}} {{artist_name}} on Beach Boys Legacy."/>

        <!-- for Twitter -->
        <meta name="twitter:title" content="{{artist_name}}: {{category_name}} - Beach Boys Legacy" />
        <meta name="twitter:description" content="Explore {{category_name}} {{artist_name}} on Beach Boys Legacy." />

        {{partials["common_headers.html"]}}
    </head>
    <body>
        <div class="header clearfix">
            <a id="open-overlay-menu" class="header__menu-icon" href="javascript:void(0)" onClick="ga('send', 'event', 'Navigation', 'click', 'Overlay Menu')"><webicon icon="material:menu"/></a>
            <div class="logo">
                <h1>Beach Boys Legacy</h1>
            </div>
            <ul class="header__nav">
                <li><a class="header__nav__patreon-link" href="https://www.patreon.com/beachboyslegacy" target="_blank">Become a Patron</a></li>
                <li><a href="http://twitter.com/beachboyslegacy" target="_blank"><webicon icon="entypo:twitter"></webicon> <span>Follow Beach Boys Legacy on twitter</span></a></li>
            </ul>
        </div>

        <div class="sidebar clearfix">

            <div class="sidebar__body">

                <div class="selector">
                    <div class="selector__title">Artist</div>
                    <div class="selector__current" id="current-artist"><span>The Beach Boys</span><div class="selector__icon"><webicon icon="material:arrow-drop-down"/></div></div>
                    <ul id="artist" class="selector__options clearfix">
                        {% for artist in artists %}
                        <li id="{{artist}}" {{'class="selector__options__current"' if artist == name}}>{{artist}}</li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="selector">
                    <div class="selector__title">Category</div>
                    <div class="selector__current" id="current-category"><span>Latest</span><div class="selector__icon"><webicon icon="material:arrow-drop-down"/></div></div>
                    <ul id="category" class="selector__options clearfix">
                        {% for category in categories %}
                        <li
                        {% if category == category_name: %}
                        class="selector__options__current"
                        {% endif %}
                        >
                            <a
                                style="text-decoration:none"
                                href="{{base_url}}/artists/{{artist_name}}/categories/{{category}}.html"
                            >
                                {{category}}
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="amazon-banner-wrapper">
                    <div id="amzn-assoc-ad-3d8cea96-b02c-4fae-9a98-94bdef6ac9cf"></div><script async src="//z-na.amazon-adsystem.com/widgets/onejs?MarketPlace=US&adInstanceId=3d8cea96-b02c-4fae-9a98-94bdef6ac9cf"></script>
                </div>
            </div>

            <div class="sidebar__footer">
                <a class="policy-link" href="cookies-policy.html" target="_blank">Cookies Policy</a>
                <a class="policy-link" href="privacy-policy.html" target="_blank">Privacy Policy</a>
            </div>
        </div>

        <div class="main-container">
            <div class="main-container__header clearfix">
                <ul class="sorting clearfix" id="sorting">
                    <li id="sorting-release" class="sorting__current">Release Date<div class="sorting__icon"><webicon icon="entypo:select-arrows"/></div></li>
                </ul>

                <div class="results-number"></div>
            </div>

            <ul class="items">
            </ul>

            {{partials["footers.html"]}}

        </div>

        {{partials["overlay_menu.html"]}}

        <script src="https://embed.widgetpack.com/widget.js" async></script>
        <script type="text/javascript">
            function wpac_ajax_init() {
                            WPac.init({widget: 'Rating', id: 2265, el: 'wpac-rating-ajax'});
                        }
        </script>



        <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css" />
        <script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.js"></script>
        <script>
            window.addEventListener("load", function(){
                            window.cookieconsent.initialise({
                                            "palette": {
                                                            "popup": {
                                                                            "background": "#000"
                                                                        },
                                                            "button": {
                                                                            "background": "#f1d600"
                                                                        }
                                                        },
                                            "content": {
                                                            "href": "cookies-policy.html"
                                                        }
                                        })});
        </script>







    </body>
</html>


